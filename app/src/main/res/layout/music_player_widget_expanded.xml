<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song_name"
            android:tooltipText="Hallo"
            tools:text="Hello"
            style="@style/TextAppearance.Compat.Notification.Title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tooltipText="What is your name"
            android:id="@+id/artist_name"
            tools:text="Lady AA"
            style="@style/TextAppearance.Compat.Notification.Title" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/resume_or_pause_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/play_or_resume_music" />
    <ImageButton
        android:id="@+id/stop_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/stop_playing_music" />
</LinearLayout>